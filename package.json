{
    "name": "nest-twitter-example",
    "version": "0.0.1",
    "description": "twitter-like api",
    "author": "forz13",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start:hmr": "node dist/main",
        "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
        "migration:generate": "ts-node node_modules/typeorm/cli.js migration:generate -f ormconfig -d src/migrations -n",
        "migration:create": "ts-node node_modules/typeorm/cli.js migration:create -f ormconfig -d src/migrations -n",
        "migration:run": "ts-node node_modules/typeorm/cli.js migration:run -f ormconfig",
        "migration:revert": "ts-node node_modules/typeorm/cli.js migration:revert -f ormconfig",
        "watch:dev": "nodemon --config nodemon.json",
        "debug:dev": "nodemon --config nodemon-debug.json",
        "webpack": "webpack --config webpack.config.js --progress",
        "schema:drop": "ts-node node_modules/typeorm/cli.js schema:drop -f ormconfig",
        "start:prod": "node dist/main.js",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint --fix . --ext .ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "fill-db": "ts-node -r tsconfig-paths/register src/console/fillDBWithFakeData",
        "fill-db:prod": "node dist/console/fillDBWithFakeData"
    },
    "dependencies": {
        "@nestjs/common": "^6.7.2",
        "@nestjs/config": "0.0.7",
        "@nestjs/core": "^6.7.2",
        "@nestjs/jwt": "^6.1.1",
        "@nestjs/passport": "^6.1.1",
        "@nestjs/platform-express": "^6.7.2",
        "@nestjs/swagger": "^4.0.9",
        "@nestjs/typeorm": "^6.2.0",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "commander": "^4.0.1",
        "faker": "^4.1.0",
        "mysql": "^2.14.1",
        "nestjs-command": "^1.3.0",
        "nestjs-console": "^1.2.0",
        "passport": "^0.4.1",
        "passport-http-bearer": "^1.0.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.10",
        "request-context": "^2.0.0",
        "rimraf": "^3.0.0",
        "rxjs": "^6.5.3",
        "typeorm": "0.2.21",
        "typescript": "3.3.3333"
    },
    "devDependencies": {
        "@nestjs/cli": "^6.9.0",
        "@nestjs/schematics": "^6.7.0",
        "@nestjs/testing": "^6.7.1",
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.18",
        "@types/node": "^8.0.29",
        "@types/passport-jwt": "^3.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.8",
        "@types/yargs": "^13.0.3",
        "eslint": "^6.8.0",
        "eslint-plugin-import": "^2.19.1",
        "jest": "^24.9.0",
        "prettier": "^1.18.2",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-loader": "^6.1.1",
        "ts-node": "3.3.0",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^5.20.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
